- @skills.group_by { |s| s.area }.each do |area, skills|
  - skills.each_with_index do |skill, i|
    - selected = @assessment.send(type).include?(skill) ? 'selected' : ''
    = render partial: 'card', locals: { obj: skill, i: i, class_name: area.name.parameterize.underscore, type: type, f: f, selected: selected }
